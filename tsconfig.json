{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": [
      "ESNext",
      "DOM"
    ],
    "skipLibCheck": true,
    "paths": {
      // 支持别名
      "@": [
        "./src"
      ],
      "@/*": [
        "./src/*"
      ]

    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "types/global.d.ts",
    "types/global.d.ts",
    ".eslintrc.cjs",
//    "mock/*"
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}
